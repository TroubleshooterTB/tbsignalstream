{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/**",
        "run": {
          "serviceId": "studio",
          "region": "us-central1"
        }
      }
    ]
  },
  "apphosting": [
    {
      "source": ".",
      "backendId": "studio",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ]
}